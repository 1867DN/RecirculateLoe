// Validación de Ventas 
export function validarVenta(venta, productosDisponibles) {
  if (!venta.cliente || venta.cliente.trim() === "") {
    return "El cliente es obligatorio.";
  }

  if (!venta.productoId) {
    return "Debe seleccionar un producto.";
  }

  if (!venta.cantidad || venta.cantidad <= 0) {
    return "La cantidad debe ser mayor a 0.";
  }

  if (!venta.metodoPago || venta.metodoPago.trim() === "") {
    return "Debe especificar un método de pago.";
  }

  // P roductoId a número para comparar correctamente
  const producto = productosDisponibles.find(
    p => p.id === Number(venta.productoId)
  );

  if (!producto) {
    return "El producto seleccionado no existe.";
  }

  if (producto.stock < venta.cantidad) {
    return `Stock insuficiente. Solo quedan ${producto.stock} unidades.`;
  }

  return true; // Pasa todas las validaciones
}

// Validación de Gastos 
export function validarGasto(gasto) {
  if (!gasto.proveedor || gasto.proveedor.trim() === "") {
    return "El proveedor es obligatorio.";
  }

  if (!gasto.monto || gasto.monto <= 0) {
    return "El monto debe ser mayor a 0.";
  }

  if (!gasto.metodoPago || gasto.metodoPago.trim() === "") {
    return "Debe especificar un método de pago.";
  }

  return true; // Pasa todas las validaciones
}
